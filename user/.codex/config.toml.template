model = "gpt-5-codex"
model_reasoning_effort = "high"
tools.web_search = true

[shell_environment_policy]
inherit = "all"
ignore_default_excludes = true
include_only = ["AWS_*", "GITHUB_*", "*API_KEY"]

[mcp_servers.context7]
args = ["-y", "@upstash/context7-mcp", "--api-key", "__CONTEXT7_API_KEY__"]
command = "npx"

[mcp_servers.exa]
args = ["-y", "exa-mcp-server"]
command = "npx"
env.EXA_API_KEY = "__EXA_API_KEY__"

[mcp_servers.playwright]
args = ["@playwright/mcp@latest"]
command = "npx"
